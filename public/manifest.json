{
  "manifest_version": 3,

  "name": "browser-extensions-template-esbuild",
  "version": "1.0",

  "icons": {
    "192": "logo192.png",
    "512": "logo512.png"
  },

  "action": {
    "default_icon": {
      "192": "logo192.png",
      "512": "logo512.png"
    }
  },

  "background": {
    "service_worker": "dist/background.js"
  },

  "permissions": ["storage", "webNavigation", "scripting", "tabs", "downloads"],

  "host_permissions": ["<all_urls>"],

  "content_scripts": [
    {
        "run_at": "document_start",
        "all_frames": false,
        "matches": ["<all_urls>"],
        "js": ["dist/inc/common.js", "dist/routes/_.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["dist/lib/*", "dist/routes/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
